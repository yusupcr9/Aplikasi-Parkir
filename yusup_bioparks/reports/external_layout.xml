<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <template id="external_layout_standard_custom">
            <div t-attf-class="header o_company_#{company['id']}_layout" t-att-style="report_header_style">
                <div class="row">
                    <div class="col-3 mb4">
                        <img t-if="company['logo']" t-att-src="image_data_uri(company['logo'])" style="max-height: 45px;" alt="Logo"/>
                    </div>
                    <div class="col-9 text-right" style="margin-top:22px;" t-esc="company['report_header']" name="moto"/>
                </div>
                <div t-if="company['logo'] or company['report_header']" class="row zero_min_height">
                    <div class="col-12">
                        <div style="border-bottom: 1px solid black;"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6" name="company_address">
                        <div t-esc="company['partner_id']"
                            t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'
                        />
                    </div>
                </div>
            </div>

            <div t-attf-class="article o_report_layout_standard o_company_#{company['id']}_layout">
                <t t-call="web.address_layout"/>
                <t t-raw="0"/>
            </div>

            <div t-attf-class="footer o_standard_footer o_company_#{company['id']}_layout">
                <div class="text-center" style="border-top: 1px solid black;">
                    <ul class="list-inline mb4">
                        <!-- using the list-inline-item class from bootstrap causes weird behaviours in pdf report
                            adding d-inline class fixes the problem-->
                        <li t-if="company['phone']" class="list-inline-item d-inline">Phone: <span class="o_force_ltr" t-esc="company['phone']"/></li>
                        <li t-if="company['email']" class="list-inline-item d-inline">Email: <span t-esc="company['email']"/></li>
                        <li t-if="company['website']" class="list-inline-item d-inline">Web: <span t-esc="company['website']"/></li>
                        <li t-if="company['vat']" class="list-inline-item d-inline"><t t-esc="company['country_id']['vat_label'] or 'Tax ID'"/>: <span t-esc="company['vat']"/></li>
                    </ul>

                    <div name="financial_infos">
                        <span t-esc="company['report_footer']"/>
                    </div>

                    <div t-if="report_type == 'pdf'" class="text-muted">
                        Page: <span class="page"/> / <span class="topage"/>
                    </div>
                </div>
            </div>
        </template>
    </data>
</odoo>